<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_profile_title"
            style="@style/TextStyle.Small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="4dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="@string/settings_username" />

        <TextView
            android:id="@+id/tv_username"
            style="@style/TextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_profile_title"
            android:background="@color/white"
            android:foreground="?attr/selectableItemBackground"
            android:padding="16dp"
            android:text="Максим Вишня"
            android:textAlignment="textStart"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_email"
            style="@style/TextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_username"
            android:background="@color/white"
            android:foreground="?attr/selectableItemBackground"
            android:padding="16dp"
            android:text="lounah@yandex.ru"
            android:textAlignment="textStart" />

        <TextView
            android:id="@+id/tv_current_major_currency"
            style="@style/TextStyle.Small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_email"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="32dp"
            android:text="@string/major_currency" />

        <TextView
            android:id="@+id/tv_major_currency"
            style="@style/TextStyle.Large"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_current_major_currency"
            android:background="@color/white"
            android:foreground="?attr/selectableItemBackground"
            android:padding="8dp"
            android:text="RUB"
            android:textAlignment="textStart" />

        <TextView
            android:id="@+id/tv_other_settings"
            style="@style/TextStyle.Small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_major_currency"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="32dp"
            android:text="@string/other_settings" />

        <TextView
            android:id="@+id/tv_about"
            style="@style/TextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_other_settings"
            android:background="@color/white"
            android:foreground="?attr/selectableItemBackground"
            android:padding="16dp"
            android:text="@string/about_application"
            android:textAlignment="textStart" />

        <TextView
            android:id="@+id/tv_policy"
            style="@style/TextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_about"
            android:background="@color/white"
            android:foreground="?attr/selectableItemBackground"
            android:padding="16dp"
            android:text="@string/confidentiality_policy"
            android:textAlignment="textStart"
            android:textColor="@color/black" />
    </RelativeLayout>
</ScrollView>
